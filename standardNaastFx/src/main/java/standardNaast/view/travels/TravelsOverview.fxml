<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="standardNaast.view.travels.TravelsOverviewController">
   <center>
      <TableView fx:id="travelsTable" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="memberNumberColumn" prefWidth="75.0" text="N° membre" />
          <TableColumn fx:id="lastNameColumn" prefWidth="75.0" text="Nom" />
            <TableColumn fx:id="firstNameColumn" prefWidth="75.0" text="Prénom" />
            <TableColumn fx:id="amountColumn" prefWidth="75.0" text="Montant" />
            <TableColumn fx:id="paidColumn" prefWidth="75.0" text="Payé" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <GridPane alignment="CENTER" hgap="5.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints maxWidth="200.0" minWidth="10.0" prefWidth="200.0" />
            <ColumnConstraints halignment="LEFT" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Saison" textFill="WHITE" />
            <Label text="Compétition" textFill="WHITE" GridPane.rowIndex="1" />
            <Label text="Lieu" textFill="WHITE" GridPane.rowIndex="2" />
            <Label text="Adversaire" textFill="WHITE" GridPane.rowIndex="3" />
            <ComboBox fx:id="seasonsBox" onAction="#onSelectedSeason" prefWidth="200.0" GridPane.columnIndex="1" />
            <ComboBox fx:id="competitionsTypeBox" onAction="#onSelectedCompetition" prefWidth="200.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
            <ComboBox fx:id="placesBox" onAction="#onSelectedPlace" prefWidth="200.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" />
            <ComboBox fx:id="matchsBox" onAction="#onSelectedMatch" prefWidth="200.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />
            <Button fx:id="refreshButton" disable="true" mnemonicParsing="false" onAction="#onRefresh" text="Rafraichir" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <Label text="Montant total" textFill="WHITE" GridPane.rowIndex="4" />
            <TextField fx:id="totalAmount" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         </children>
      </GridPane>
   </top>
</BorderPane>
