<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>

<BorderPane prefHeight="133.0" prefWidth="379.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="standardNaast.view.benevolat.BenevolatFormController">
   <center>
      <GridPane>
         <children>
            <Label text="Date" />
            <Label text="Montant" GridPane.rowIndex="2" />
            <Label text="Description" GridPane.rowIndex="3" />
            <TextField fx:id="montantBenevolat" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <DatePicker fx:id="dateBenevolat" GridPane.columnIndex="1" />
            <TextArea fx:id="description" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
         </rowConstraints>
      </GridPane>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddBenevolat" text="Ajouter" />
            <Button fx:id="modifyButton" mnemonicParsing="false" onAction="#onModifyBenevolat" text="Modifier" />
            <Button mnemonicParsing="false" onAction="#onCancel" text="Annuler" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
